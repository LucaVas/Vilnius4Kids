{
    "extends": "@tsconfig/node18/tsconfig.json",

    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "..",

        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "Bundler",

        "experimentalDecorators": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "outDir": "dist",

        "types": ["vitest/globals"],
        "paths": {
            "@server/*": ["./src/*"],
            "@tests/*": ["./tests/*"]
        }
    }
}
